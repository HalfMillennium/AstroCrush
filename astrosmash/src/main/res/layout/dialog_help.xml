<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textViewHelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mariginLayout"
            android:text="@string/CreditsHelp" />

        <TextView
            android:id="@+id/textViewCredits1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mariginLayout"
            android:text="@string/Credits1" />

        <TextView
            android:id="@+id/textViewCredits2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mariginLayout"
            android:text="@string/Credits2" />

        <TextView
            android:id="@+id/textViewCredits3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mariginLayout"
            android:text="@string/Credits3" />

    </LinearLayout>

</ScrollView>
